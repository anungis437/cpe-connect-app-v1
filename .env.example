# Development Environment Variables
NODE_ENV=development

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="CPE Connect - Development"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Power BI Integration
POWERBI_WORKSPACE_ID=your_workspace_id_here
POWERBI_DATASET_ID=your_dataset_id_here
POWERBI_CLIENT_ID=your_powerbi_client_id_here
POWERBI_CLIENT_SECRET=your_powerbi_client_secret_here
POWERBI_TENANT_ID=your_powerbi_tenant_id_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@cpeacademy.com

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=debug
