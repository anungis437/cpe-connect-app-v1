# CPE Connect - Local Development Environment
# Copy this to .env.local and update with your actual values

# =================================
# Supabase Configuration
# =================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =================================
# Application Configuration  
# =================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="CPE Connect"
NEXT_PUBLIC_APP_DESCRIPTION="Professional Continuing Education Platform"

# =================================
# Authentication Configuration
# =================================
# JWT Secret for additional security (optional)
JWT_SECRET=your-super-secure-jwt-secret

# OAuth Providers (configure in Supabase Dashboard)
NEXT_PUBLIC_GOOGLE_OAUTH_ENABLED=true
NEXT_PUBLIC_MICROSOFT_OAUTH_ENABLED=true
NEXT_PUBLIC_LINKEDIN_OAUTH_ENABLED=true

# =================================
# Email Configuration
# =================================
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=your-resend-api-key
SMTP_FROM=noreply@cpeconnect.com

# Resend API (recommended for production)
RESEND_API_KEY=your-resend-api-key

# =================================
# Security Configuration
# =================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Session configuration
SESSION_TIMEOUT_MINUTES=60
REFRESH_TOKEN_ROTATION_ENABLED=true

# =================================
# Database Configuration
# =================================
# Connection pooling (for production)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# =================================
# Monitoring & Analytics
# =================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

NEXT_PUBLIC_VERCEL_ANALYTICS_ENABLED=true
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =================================
# Feature Flags
# =================================
NEXT_PUBLIC_FEATURE_MULTI_TENANT=true
NEXT_PUBLIC_FEATURE_SSO=true
NEXT_PUBLIC_FEATURE_2FA=true
NEXT_PUBLIC_FEATURE_AUDIT_LOGS=true

# =================================
# Development Configuration
# =================================
NODE_ENV=development
ANALYZE=false  # Set to true to analyze bundle size

# =================================
# Power BI Integration (Optional)
# =================================
POWERBI_WORKSPACE_ID=your-workspace-id
POWERBI_DATASET_ID=your-dataset-id
POWERBI_CLIENT_ID=your-client-id
POWERBI_CLIENT_SECRET=your-client-secret
POWERBI_TENANT_ID=your-tenant-id

# =================================
# File Storage Configuration
# =================================
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,mp4,webm,jpg,jpeg,png,gif

# =================================
# Certificate Generation
# =================================
CERTIFICATE_SIGNING_KEY=your-certificate-signing-key
CERTIFICATE_ISSUER="CPE Connect Platform"

# =================================
# Localization
# =================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,fr